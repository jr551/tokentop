{
  "name": "@tokentop/ttop",
  "version": "0.2.2",
  "description": "Real-time AI token usage monitor - htop for your API costs",
  "author": "Nigel Bazzeghin <nbazzeghin@gmail.com>",
  "license": "MIT",
  "type": "module",
  "bin": {
    "ttop": "./bin/ttop.js"
  },
  "files": [
    "bin/",
    "src/",
    "package.json",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "bun --hot src/cli.ts",
    "start": "bun src/cli.ts",
    "build": "bun build ./src/cli.ts --outdir=dist --target=bun --minify",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "driver": "bun src/tui/driver/cli.ts",
    "driver:help": "bun src/tui/driver/cli.ts --help",
    "snapshot": "bun src/tui/debug/snapshot.tsx"
  },
  "dependencies": {
    "@opentui/core": "0.1.79",
    "@opentui/react": "0.1.79",
    "@tokentop/agent-claude-code": "^1.1.0",
    "@tokentop/agent-opencode": "^1.0.0",
    "@tokentop/plugin-sdk": "^1.1.0",
    "react": "^19.0.0",
    "react-devtools-core": "^7.0.1",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/react": "^19.0.0"
  },
  "keywords": [
    "ai",
    "llm",
    "token",
    "usage",
    "monitor",
    "tui",
    "terminal",
    "htop",
    "anthropic",
    "openai",
    "claude",
    "gpt"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/tokentopapp/tokentop"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}
