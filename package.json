{
  "name": "@tokentop/ttop",
  "version": "0.4.0",
  "description": "Real-time AI token usage monitor - htop for your API costs",
  "author": "Nigel Bazzeghin <nbazzeghin@gmail.com>",
  "license": "MIT",
  "type": "module",
  "bin": {
    "ttop": "./bin/ttop.js"
  },
  "files": [
    "bin/",
    "src/",
    "package.json",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "bun --hot src/cli.ts",
    "start": "bun src/cli.ts",
    "build": "bun build ./src/cli.ts --outdir=dist --target=bun --minify",
    "typecheck": "tsc --noEmit",
    "lint": "biome check src/",
    "format": "biome format src/",
    "lint:fix": "biome check --write src/",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "driver": "bun src/tui/driver/cli.ts",
    "driver:help": "bun src/tui/driver/cli.ts --help",
    "snapshot": "bun src/tui/debug/snapshot.tsx"
  },
  "dependencies": {
    "@opentui/core": "0.1.81",
    "@opentui/react": "0.1.81",
    "@tokentop/agent-claude-code": "^1.1.0",
    "@tokentop/agent-cursor": "^1.2.0",
    "@tokentop/agent-opencode": "^1.0.0",
    "@tokentop/plugin-sdk": "^1.3.0",
    "react": "^19.0.0",
    "react-devtools-core": "^7.0.1",
    "zod": "^4.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.2",
    "@types/bun": "latest",
    "@types/react": "^19.0.0"
  },
  "keywords": [
    "ai",
    "llm",
    "token",
    "usage",
    "monitor",
    "tui",
    "terminal",
    "htop",
    "anthropic",
    "openai",
    "claude",
    "gpt"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/tokentopapp/tokentop"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "overrides": {
    "@types/node": "^22.0.0"
  }
}
