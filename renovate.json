{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommits"
  ],
  "packageRules": [
    {
      "matchPackagePatterns": ["^@opentui/"],
      "groupName": "OpenTUI"
    },
    {
      "matchPackagePatterns": ["^@tokentop/"],
      "groupName": "tokentop plugins"
    }
  ]
}
